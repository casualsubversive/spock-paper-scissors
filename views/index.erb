<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Spock, Paper, Scissors</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>

    <div id="section-1">
      <p>Spock Paper Scissors</p>
    </div>

    <div class="section group" id="section-2">
    	<div class="col span_1_of_2">
        <h3>
          Enterprise: <span id="player-score">0</span>
        </h3>
    	</div>
    	<div class="col span_1_of_2">
        <h3>
          Khan: <span id="computer-score">0</span>
        </h3>
    	</div>
    </div>

    <div id="section-3">
      <p class="feedback">
        Round 1.
      </p>
      <p class="feedback">
        Choose your officer.
      </p>
    </div>


    <div class="section group" id="section-4">
    	<div class="col span_2_of_7">
    	</div>
    	<div class="col span_1_of_7">
        <form action="/index" method="post">
          <a href="kirk">
            <img id="kirk" class="cartoon-head" src="http://dummyimage.com/100x100/008cff/00ffea.png&text=Kirk" alt="Kirk">
          </a>
        </form>
    	</div>
    	<div class="col span_1_of_7">
        <form action="/index" method="post">
          <a href="spock">
            <img id="spock" class="cartoon-head" src="http://dummyimage.com/100x100/008cff/00ffea.png&text=Spock" alt="Spock">
          </a>
        </form>
    	</div>
    	<div class="col span_1_of_7">
        <form action="/index" method="post">
          <a href="bones">
            <img id="bones" class="cartoon-head" src="http://dummyimage.com/100x100/008cff/00ffea.png&text=Bones" alt="Bones">
          </a>
        </form>
    	</div>
    	<div class="col span_2_of_7">
    	</div>
    </div>

    <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="game.js"></script>

  </body>
</html>
